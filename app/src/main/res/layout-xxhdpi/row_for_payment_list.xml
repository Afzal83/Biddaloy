<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/payment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="15dp"
        android:textColor="@color/mitu"/>
    <TextView
        android:id="@+id/due_amount_h"
        android:layout_below="@id/payment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="13dp"
        android:text="Due : "/>
    <TextView
        android:id="@+id/due_amount"
        android:layout_toEndOf="@id/due_amount_h"
        android:layout_below="@id/paid_amount_h"
        android:layout_alignBaseline="@id/due_amount_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:text="500"/>
    <TextView
        android:id="@+id/paid_amount"
        android:layout_below="@id/payment_date_header"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/due_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="150 taka"/>
    <TextView
        android:id="@+id/paid_amount_h"
        android:layout_below="@id/payment_date_header"
        android:layout_toStartOf="@id/paid_amount"
        android:layout_alignBaseline="@id/due_amount_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="Paid : "/>

</RelativeLayout>
