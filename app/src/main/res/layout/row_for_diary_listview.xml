<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <TextView
        android:id="@+id/notice_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="Suzuki Gixxer BS4 is a renowned street fighter from the Japanese manufacturer. It carries a 154.9cc, air cooled engine, producing 14.6 BHP and 14 Nm of torque."/>

    <TextView
        android:id="@+id/notice_subject"
        android:layout_below="@id/notice_content"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Subject : Bangla"/>
    <TextView
        android:id="@+id/notice_teacher"
        android:layout_below="@id/notice_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Teacher : Abdul Jobbar"/>
    <TextView
        android:id="@+id/notice_date"
        android:layout_below="@id/notice_subject"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="Date : 12/34/5002"/>

</RelativeLayout>
