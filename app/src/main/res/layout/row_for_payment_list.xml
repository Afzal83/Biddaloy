<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/paid_amount_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Paid : "/>
    <TextView
        android:id="@+id/paid_amount"
        android:layout_toEndOf="@id/paid_amount_h"
        android:layout_alignBaseline="@id/paid_amount_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="800"/>
    <TextView
        android:id="@+id/due_amount_h"
        android:layout_below="@id/paid_amount_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Due : "/>
    <TextView
        android:id="@+id/due_amount"
        android:layout_toEndOf="@id/due_amount_h"
        android:layout_below="@id/paid_amount_h"
        android:layout_alignBaseline="@id/due_amount_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="500"/>
    <TextView
        android:id="@+id/payment_date"
        android:layout_below="@id/paid_amount_h"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/due_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12-12-2006"/>
    <TextView
        android:id="@+id/payment_date_header"
        android:layout_below="@id/paid_amount_h"
        android:layout_toStartOf="@id/payment_date"
        android:layout_alignBaseline="@id/payment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Date : "/>

</RelativeLayout>
