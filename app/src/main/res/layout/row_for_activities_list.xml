<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="15dp"
    android:paddingEnd="5dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text="John Doe"/>
    <TextView
        android:id="@+id/activities_activities"
        android:layout_toEndOf="@id/creator_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Created an album"/>
    <TextView
        android:id="@+id/activities_name"
        android:layout_toEndOf="@id/activities_activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="15dp"
        android:text=" demo.jpg"/>
    <TextView
        android:id="@+id/when_activities_happend"
        android:layout_below="@id/activities_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="An hour ago"/>

</RelativeLayout>
