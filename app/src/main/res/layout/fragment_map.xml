<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
       android:id="@+id/map_mapContainer"
       android:layout_width="match_parent"
       android:layout_height="0dp"
        android:layout_weight="10">

    </RelativeLayout>
    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:background="#02bfa6">
        <TextView
            android:id="@+id/selected_student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:text="Select Student"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <Button
            android:id="@+id/find_asset_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:background="#37a5ff"
            android:text="Student A"/>
        <Button
            android:id="@+id/find_asset_two"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:background="#37a5ff"
            android:text="Student B"/>
        <Button
            android:id="@+id/find_asset_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:textAllCaps="false"
            android:background="#37a5ff"
            android:text="Student C"/>
    </LinearLayout>
</LinearLayout>
