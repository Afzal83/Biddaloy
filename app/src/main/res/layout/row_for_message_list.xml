<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_weight="10">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/message_sender_image"
            android:layout_centerInParent="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/child_head_icon"
            app:civ_border_width="0dp"
            app:civ_border_color="#00000000"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:layout_weight="50">
        <TextView
            android:id="@+id/messege_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="jon Doe,"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/messege_send_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  yesterday 12pm"
            android:layout_alignParentRight="true"
            android:textSize="15dp"
            android:textColor="@color/mitu"/>
        <TextView
            android:id="@+id/messege_content"
            android:layout_below="@id/messege_sender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:maxLines = "2"
            android:minLines="1"
            android:text="yesterday 12pm and this message is not offensive asfasfasfasfas sfasfa sdf asf"/>

    </RelativeLayout>


</LinearLayout>
